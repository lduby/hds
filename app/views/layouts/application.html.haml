!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %title BokBok
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #header.navbar.navbar-fixed-top
      .navbar-inner
        .container
          = render 'layouts/navigation'
          - if user_signed_in?
            %form.navbar-search{:action => ''}
              .input-append
                %input.search-query.span2{:type => "text", :placeholder => "Title / Author / ISBN"}
                  %i.icon-search
    #main{:role => "main"}
      .container
        .content
          .row
            - if content_for?(:subnav)
              .span3
                = yield :subnav
              .span9
                = render 'layouts/messages'
                = yield
            - else
              .span12
                = render 'layouts/messages'
                = yield
    #footer
