- if @all_shelves_books.size == 0
  %p No books found in the library.
- else 
  - @all_shelves_books.each do |book|
    .media
      %a.pull-left{:href => book_path(book)}
        = image_tag(book.cover.url(:tiny), :class => "media-object")
      .media-body
        %h4.media-heading= book.title
        %small
          - book.authors.each do |a|
            - if a == book.authors.first
              = link_to a.name, a
            - else 
              = ", "
              = link_to a.name, a
        %p= book.publisher_resume