%p#notice= notice
.page-header
  %h4
    = @shelf.name
    %a.btn.btn-mini.pull-right{:href => edit_profile_shelf_path(@shelf.profile,@shelf)}
      %i.icon-pencil
      Edit Shelf
    %small= @shelf.description
  %h6= "(#{@shelf.books.size} books)"
- if @shelf.books.size != 0
  .thumbnails
  - @shelf.books.each do |book|
    .span1
      %a{:href => book_path(book)}
        = image_tag book.cover.url(:tiny)
  
